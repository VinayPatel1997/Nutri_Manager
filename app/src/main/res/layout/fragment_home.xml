<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circular_progress_energy"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    app:cpb_background_progressbar_color="#F2F2F2"
                    app:cpb_background_progressbar_width="20dp"
                    app:cpb_progress_max="0"
                    app:cpb_progressbar_color="#F44336"
                    app:cpb_progressbar_width="15dp"
                    app:cpb_round_border="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_energyCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/tv_energyMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="/0"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_aveEnergyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/andika"
                android:text="Average Energy/Day"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circular_progress_avoid"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    app:cpb_background_progressbar_color="#F2F2F2"
                    app:cpb_background_progressbar_width="20dp"
                    app:cpb_progress_max="0"
                    app:cpb_progressbar_color="#F44336"
                    app:cpb_progressbar_width="15dp"
                    app:cpb_round_border="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_avoidCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/tv_avoidMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="/0"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_maxNutriMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/andika"
                android:text="Max Nutrient/Day"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circular_progress_take"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    app:cpb_background_progressbar_color="#F2F2F2"
                    app:cpb_background_progressbar_width="20dp"
                    app:cpb_progress_max="0"
                    app:cpb_progressbar_color="#F44336"
                    app:cpb_progressbar_width="15dp"
                    app:cpb_round_border="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_takeCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/tv_takeMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika"
                        android:text="/0"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_minNutriMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/andika"
                android:text="Min Nutrient/Day"
                android:textSize="16sp"
                android:paddingBottom="40dp"
                />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add Diet"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/andika"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconTint="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:contentDescription="Add"
        />

    <ProgressBar
        android:id="@+id/progress_bar_home_fragment"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>